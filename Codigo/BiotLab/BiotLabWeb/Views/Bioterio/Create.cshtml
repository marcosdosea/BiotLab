@model BiotLabWeb.Models.BioterioViewModel
@{
    ViewData["Title"] = "Cadastrar Biotério";
}

<div class="max-w-4xl mx-auto mt-10 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6 flex items-center gap-2">
        <i data-lucide="dna" class="w-6 h-6 text-purple-600"></i> Cadastrar Biotério
    </h2>

    <form asp-action="Create" method="post" class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <label asp-for="Nome" class="block text-sm font-medium text-gray-700">Nome</label>
            <input asp-for="Nome" class="form-input w-full border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="Nome" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
            <input asp-for="Email" class="form-input w-full border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Telefone1" class="block text-sm font-medium text-gray-700">Telefone 1</label>
            <input asp-for="Telefone1" class="form-input w-full border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="Telefone1" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Telefone2" class="block text-sm font-medium text-gray-700">Telefone 2</label>
            <input asp-for="Telefone2" class="form-input w-full border-gray-300 rounded px-3 py-2" />
        </div>

        <div>
            <label asp-for="Cep" class="block text-sm font-medium text-gray-700">CEP</label>
            <input asp-for="Cep" class="form-input w-full border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="Cep" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Rua" class="block text-sm font-medium text-gray-700">Rua</label>
            <input asp-for="Rua" class="form-input w-full border-gray-300 rounded px-3 py-2" />
        </div>

        <div>
            <label asp-for="Numero" class="block text-sm font-medium text-gray-700">Número</label>
            <input asp-for="Numero" class="form-input w-full border-gray-300 rounded px-3 py-2" />
        </div>

        <div>
            <label asp-for="Bairro" class="block text-sm font-medium text-gray-700">Bairro</label>
            <input asp-for="Bairro" class="form-input w-full border-gray-300 rounded px-3 py-2" />
        </div>

        <div>
            <label asp-for="Cidade" class="block text-sm font-medium text-gray-700">Cidade</label>
            <input asp-for="Cidade" class="form-input w-full border-gray-300 rounded px-3 py-2" />
        </div>

        <div>
            <label asp-for="Estado" class="block text-sm font-medium text-gray-700">Estado</label>
            <input asp-for="Estado" class="form-input w-full border-gray-300 rounded px-3 py-2" />
        </div>

        <div>
            <label asp-for="Complemento" class="block text-sm font-medium text-gray-700">Complemento</label>
            <input asp-for="Complemento" class="form-input w-full border-gray-300 rounded px-3 py-2" />
        </div>

        <div class="col-span-full flex justify-between mt-6">
            <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-4 py-2 rounded flex items-center gap-2">
                <i data-lucide="arrow-left" class="w-4 h-4"></i> Voltar
            </a>
            <button type="submit" class="bg-purple-600 hover:bg-purple-700 text-white font-semibold px-6 py-2 rounded flex items-center gap-2">
                <i data-lucide="save" class="w-4 h-4"></i> Salvar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>lucide.createIcons();</script>
}
