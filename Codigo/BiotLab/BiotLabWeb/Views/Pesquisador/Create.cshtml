@model BiotLabWeb.Models.PesquisadorViewModel
@{
    ViewData["Title"] = "Cadastrar Pesquisador";
}

<div class="bg-white p-6 rounded-lg shadow-md max-w-5xl mx-auto">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
        <i data-lucide="user-plus" class="w-6 h-6 text-green-600"></i>
        Cadastrar Novo Pesquisador
    </h2>

    <form asp-action="Create" class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <label asp-for="Nome" class="block font-semibold text-sm text-gray-700 mb-1"></label>
            <input asp-for="Nome" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="Nome" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Cpf" class="block font-semibold text-sm text-gray-700 mb-1"></label>
            <input asp-for="Cpf" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="Cpf" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="block font-semibold text-sm text-gray-700 mb-1"></label>
            <input asp-for="Email" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Telefone1" class="block font-semibold text-sm text-gray-700 mb-1"></label>
            <input asp-for="Telefone1" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="Telefone1" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Telefone2" class="block font-semibold text-sm text-gray-700 mb-1"></label>
            <input asp-for="Telefone2" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
        </div>

        <div>
            <label asp-for="Cep" class="block font-semibold text-sm text-gray-700 mb-1"></label>
            <input asp-for="Cep" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="Cep" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Rua" class="block font-semibold text-sm text-gray-700 mb-1"></label>
            <input asp-for="Rua" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
        </div>

        <div>
            <label asp-for="Bairro" class="block font-semibold text-sm text-gray-700 mb-1"></label>
            <input asp-for="Bairro" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
        </div>

        <div>
            <label asp-for="Cidade" class="block font-semibold text-sm text-gray-700 mb-1"></label>
            <input asp-for="Cidade" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
        </div>

        <div>
            <label asp-for="Numero" class="block font-semibold text-sm text-gray-700 mb-1"></label>
            <input asp-for="Numero" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
        </div>

        <div>
            <label asp-for="Complemento" class="block font-semibold text-sm text-gray-700 mb-1"></label>
            <input asp-for="Complemento" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
        </div>

        <div>
            <label asp-for="Estado" class="block font-semibold text-sm text-gray-700 mb-1"></label>
            <input asp-for="Estado" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="Estado" class="text-red-600 text-sm"></span>
        </div>

        <div class="col-span-full flex justify-end gap-3 mt-4">
            <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-5 py-2 rounded flex items-center gap-2">
                <i data-lucide="arrow-left" class="w-4 h-4"></i> Voltar
            </a>
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded flex items-center gap-2">
                <i data-lucide="save" class="w-4 h-4"></i> Salvar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>lucide.createIcons();</script>
}
