@model BiotLabWeb.Models.EntradaanestesicoViewModel

@{
    ViewData["Title"] = "Excluir Entrada de Anestésico";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Entrada de Anestésico</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IdEntrada)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdEntrada)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IdAnestesico)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdAnestesico)
        </dd>
        <dt>
