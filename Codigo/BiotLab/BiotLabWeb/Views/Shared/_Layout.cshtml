<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BiotLab</title>

    <!-- TailwindCSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <!-- Fonte Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-slate-100 min-h-screen flex flex-col">

    <!-- Header -->
    <header class="bg-blue-700 text-white shadow-md">
        <div class="container mx-auto flex justify-between items-center py-4 px-6">
            <h1 class="text-2xl font-bold flex items-center gap-2">
                <i data-lucide="flask-conical" class="w-6 h-6"></i>
                BiotLab
            </h1>
            <nav class="flex gap-4 flex-wrap justify-center">
                <a asp-controller="Home" asp-action="Index" class="hover:underline">Home</a>
                <a asp-controller="Bioterio" asp-action="Index" class="hover:underline">Bioterio</a>
                <a asp-controller="Harem" asp-action="Index" class="hover:underline">Harem</a>
                <a asp-controller="Gaiola" asp-action="Index" class="hover:underline">Gaiola</a>
                <a asp-controller="Experimento" asp-action="Index" class="hover:underline">Experimento</a>
                <a asp-controller="Obituario" asp-action="Index" class="hover:underline">Obituario</a>
                <a asp-controller="Pesquisador" asp-action="Index" class="hover:underline">Pesquisador</a>
                <a asp-controller="Instituicao" asp-action="Index" class="hover:underline">Instituicao</a>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main role="main" class="flex-grow container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-blue-800 text-white text-center py-4 mt-auto">
        <p>&copy; 2025 - BiotLab - Todos os direitos reservados</p>
    </footer>

    <!-- Scripts -->
    <script>
        lucide.createIcons();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
