@model BiotLabWeb.Models.InstituicaoViewModel
@{
    ViewData["Title"] = "Editar Instituição";
}

<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6 flex items-center gap-2">
        <i data-lucide="edit" class="w-6 h-6 text-yellow-600"></i> Editar Instituição
    </h2>

    <form asp-action="Edit" method="post" class="grid grid-cols-1 gap-6">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="Nome" class="block text-sm font-medium text-gray-700">Nome</label>
            <input asp-for="Nome" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" />
            <span asp-validation-for="Nome" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="Cnpj" class="block text-sm font-medium text-gray-700">CNPJ</label>
            <input asp-for="Cnpj" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" />
            <span asp-validation-for="Cnpj" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="Cep" class="block text-sm font-medium text-gray-700">CEP</label>
            <input asp-for="Cep" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" />
            <span asp-validation-for="Cep" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="Rua" class="block text-sm font-medium text-gray-700">Rua</label>
            <input asp-for="Rua" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" />
            <span asp-validation-for="Rua" class="text-sm text-red-600"></span>
        </div>

        <div class="flex justify-between">
            <a asp-action="Index" class="inline-flex items-center gap-2 px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 transition">
                <i data-lucide="arrow-left" class="w-4 h-4"></i> Voltar
            </a>
            <button type="submit" class="inline-flex items-center gap-2 px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600 transition">
                <i data-lucide="save" class="w-4 h-4"></i> Atualizar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>lucide.createIcons();</script>
}
