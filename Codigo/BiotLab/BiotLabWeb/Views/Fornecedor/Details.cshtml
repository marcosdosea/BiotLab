@model BiotLabWeb.Models.FornecedorViewModel
@{
    ViewData["Title"] = "Detalhes do Fornecedor";
}

<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6 flex items-center gap-2">
        <i data-lucide="info" class="w-6 h-6 text-blue-600"></i> Detalhes do Fornecedor
    </h2>

    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-700">
        <div>
            <dt class="font-medium text-gray-600">Nome</dt>
            <dd class="mt-1 text-gray-900">@Model.Nome</dd>
        </div>
        <div>
            <dt class="font-medium text-gray-600">CNPJ</dt>
            <dd class="mt-1 text-gray-900">@Model.Cnpj</dd>
        </div>
        <div>
            <dt class="font-medium text-gray-600">Email</dt>
            <dd class="mt-1 text-gray-900">@Model.Email</dd>
        </div>
        <div>
            <dt class="font-medium text-gray-600">Telefone 1</dt>
            <dd class="mt-1 text-gray-900">@Model.Telefone1</dd>
        </div>
        <div>
            <dt class="font-medium text-gray-600">Telefone 2</dt>
            <dd class="mt-1 text-gray-900">@Model.Telefone2</dd>
        </div>
        <div>
            <dt class="font-medium text-gray-600">CEP</dt>
            <dd class="mt-1 text-gray-900">@Model.Cep</dd>
        </div>
        <div>
            <dt class="font-medium text-gray-600">Rua</dt>
            <dd class="mt-1 text-gray-900">@Model.Rua, @Model.Numero</dd>
        </div>
        <div>
            <dt class="font-medium text-gray-600">Complemento</dt>
            <dd class="mt-1 text-gray-900">@Model.Complemento</dd>
        </div>
        <div>
            <dt class="font-medium text-gray-600">Bairro</dt>
            <dd class="mt-1 text-gray-900">@Model.Bairro</dd>
        </div>
        <div>
            <dt class="font-medium text-gray-600">Cidade / Estado</dt>
            <dd class="mt-1 text-gray-900">@Model.Cidade - @Model.Estado</dd>
        </div>
    </dl>

    <div class="mt-6 flex justify-between">
        <a asp-action="Index" class="inline-flex items-center gap-2 px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 transition">
            <i data-lucide="arrow-left" class="w-4 h-4"></i> Voltar
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
            <i data-lucide="pencil" class="w-4 h-4"></i> Editar
        </a>
    </div>
</div>

@section Scripts {
    <script>lucide.createIcons();</script>
}