@model IEnumerable<BiotLabWeb.Models.EntradumViewModel>

@{
    ViewData["Title"] = "Lista de Entradum";
}

<h1>Entradum</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Novo Entradum</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().NumeroNotaFiscal)</th>
            <th>@Html.DisplayNameFor(model => model.First().DataEntrada)</th>
            <th>@Html.DisplayNameFor(model => model.First().Fornecedor.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.First().Instituicao.Nome)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NumeroNotaFiscal)</td>
                <td>@Html.DisplayFor(modelItem => item.DataEntrada.ToShortDateString())</td>
                <td>@Html.DisplayFor(modelItem => item.Fornecedor.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Instituicao.Nome)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
