@model BiotLabWeb.Models.PesquisadorViewModel
@{
    ViewData["Title"] = "Editar Pesquisador";
}

<div class="bg-white p-6 rounded-lg shadow-md max-w-5xl mx-auto">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
        <i data-lucide="user-cog" class="w-6 h-6 text-yellow-600"></i>
        Editar Pesquisador
    </h2>

    <form asp-action="Edit" class="grid grid-cols-1 gap-6">
        <input type="hidden" asp-for="Id" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Nome" class="block text-sm font-medium text-gray-700 mb-1">Nome</label>
                <input asp-for="Nome" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
                <span asp-validation-for="Nome" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Cpf" class="block text-sm font-medium text-gray-700 mb-1">CPF</label>
                <input asp-for="Cpf" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
                <span asp-validation-for="Cpf" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Email" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Telefone1" class="block text-sm font-medium text-gray-700 mb-1">Telefone 1</label>
                <input asp-for="Telefone1" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
                <span asp-validation-for="Telefone1" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Telefone2" class="block text-sm font-medium text-gray-700 mb-1">Telefone 2</label>
                <input asp-for="Telefone2" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
            </div>

            <div>
                <label asp-for="Cep" class="block text-sm font-medium text-gray-700 mb-1">CEP</label>
                <input asp-for="Cep" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
                <span asp-validation-for="Cep" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Rua" class="block text-sm font-medium text-gray-700 mb-1">Rua</label>
                <input asp-for="Rua" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
            </div>

            <div>
                <label asp-for="Bairro" class="block text-sm font-medium text-gray-700 mb-1">Bairro</label>
                <input asp-for="Bairro" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
            </div>

            <div>
                <label asp-for="Cidade" class="block text-sm font-medium text-gray-700 mb-1">Cidade</label>
                <input asp-for="Cidade" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
            </div>

            <div>
                <label asp-for="Numero" class="block text-sm font-medium text-gray-700 mb-1">Número</label>
                <input asp-for="Numero" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
            </div>

            <div>
                <label asp-for="Complemento" class="block text-sm font-medium text-gray-700 mb-1">Complemento</label>
                <input asp-for="Complemento" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
            </div>

            <div>
                <label asp-for="Estado" class="block text-sm font-medium text-gray-700 mb-1">Estado</label>
                <input asp-for="Estado" class="form-input w-full border border-gray-300 rounded px-3 py-2" />
                <span asp-validation-for="Estado" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="col-span-full flex justify-end gap-3 mt-4">
            <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-5 py-2 rounded flex items-center gap-2">
                <i data-lucide="arrow-left" class="w-4 h-4"></i> Voltar
            </a>
            <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white font-semibold px-6 py-2 rounded flex items-center gap-2">
                <i data-lucide="save" class="w-4 h-4"></i> Atualizar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>lucide.createIcons();</script>
}

