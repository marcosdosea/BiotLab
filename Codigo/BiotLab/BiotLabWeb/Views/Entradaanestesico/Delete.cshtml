        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Lote)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Lote)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ValorUnitario)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ValorUnitario)
        </dd>
    </dl>

    <div>
        <h4>Tem certeza de que deseja excluir esta entrada?</h4>
        @using (Html.BeginForm("DeleteConfirmed", "Entradaanestesico", new { idEntrada = Model.IdEntrada, idAnestesico = Model.IdAnestesico }, FormMethod.Post))
        {
            <input type="submit" value="Excluir" class="btn btn-danger" />
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
        }
