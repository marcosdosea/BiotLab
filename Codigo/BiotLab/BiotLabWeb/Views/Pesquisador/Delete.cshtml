@model BiotLabWeb.Models.PesquisadorViewModel
@{
    ViewData["Title"] = "Excluir Pesquisador";
}

<div class="bg-white p-6 rounded-lg shadow-md max-w-3xl mx-auto">
    <h2 class="text-2xl font-bold text-red-600 mb-6 flex items-center gap-2">
        <i data-lucide="trash" class="w-6 h-6"></i>
        Confirmar Exclusão
    </h2>

    <p class="text-gray-700 mb-4">Tem certeza que deseja excluir o seguinte pesquisador?</p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <div><strong>Nome:</strong> @Model.Nome</div>
        <div><strong>CPF:</strong> @Model.Cpf</div>
        <div><strong>Email:</strong> @Model.Email</div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="flex justify-end gap-3">
            <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-5 py-2 rounded flex items-center gap-2">
                <i data-lucide="arrow-left" class="w-4 h-4"></i> Cancelar
            </a>
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2 rounded flex items-center gap-2">
                <i data-lucide="trash-2" class="w-4 h-4"></i> Excluir
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>lucide.createIcons();</script>
}
