@model BiotLabWeb.Models.ExperimentoViewModel
@{
    ViewData["Title"] = "Cadastrar Experimento";
}

<div class="max-w-4xl mx-auto mt-10 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6 flex items-center gap-2">
        <i data-lucide="flask-conical" class="w-6 h-6 text-purple-700"></i> Cadastrar Experimento
    </h2>

    <form asp-action="Create" method="post" class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <label asp-for="Nome" class="block text-sm font-medium text-gray-700">Nome do Pesquisador</label>
            <input asp-for="Nome" class="form-input w-full border border-black rounded-full px-4 py-2 bg-white text-gray-900" />
            <span asp-validation-for="Nome" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Cepa" class="block text-sm font-medium text-gray-700">Cepa</label>
            <input asp-for="Cepa" class="form-input w-full border border-black rounded-full px-4 py-2 bg-white text-gray-900" />
        </div>

        <div>
            <label asp-for="DataInicio" class="block text-sm font-medium text-gray-700">Data de Início</label>
            <input asp-for="DataInicio" type="date" class="form-input w-full border border-black rounded-full px-4 py-2 bg-white text-gray-900" />
            <span asp-validation-for="DataInicio" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="DataFim" class="block text-sm font-medium text-gray-700">Data de Fim</label>
            <input asp-for="DataFim" type="date" class="form-input w-full border border-black rounded-full px-4 py-2 bg-white text-gray-900" />
            <span asp-validation-for="DataFim" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Gaiolas" class="block text-sm font-medium text-gray-700">Gaiolas</label>
            <input asp-for="Gaiolas" class="form-input w-full border border-black rounded-full px-4 py-2 bg-white text-gray-900" />
        </div>

        <div>
            <label asp-for="Usoanestesicos" class="block text-sm font-medium text-gray-700">Anestésico</label>
            <input asp-for="Usoanestesicos" class="form-input w-full border border-black rounded-full px-4 py-2 bg-white text-gray-900" />
        </div>

        <div class="col-span-full flex justify-between mt-6">
            <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-4 py-2 rounded flex items-center gap-2">
                <i data-lucide="arrow-left" class="w-4 h-4"></i> Voltar
            </a>
            <button type="submit" class="bg-purple-700 hover:bg-purple-800 text-white font-semibold px-6 py-2 rounded flex items-center gap-2">
                <i data-lucide="save" class="w-4 h-4"></i> Salvar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>lucide.createIcons();</script>
}
