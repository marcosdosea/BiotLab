@model BiotLabWeb.Models.InstituicaoViewModel
@{
    ViewData["Title"] = "Excluir Instituição";
}

<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-semibold text-red-600 mb-6 flex items-center gap-2">
        <i data-lucide="trash-2" class="w-6 h-6"></i> Confirmar Exclusão
    </h2>

    <p class="text-gray-700 mb-4">Tem certeza que deseja excluir a seguinte instituição?</p>

    <dl class="grid grid-cols-1 gap-4 text-sm text-gray-700">
        <div>
            <dt class="font-medium text-gray-600">Nome</dt>
            <dd class="mt-1 text-gray-900">@Model.Nome</dd>
        </div>

        <div>
            <dt class="font-medium text-gray-600">CNPJ</dt>
            <dd class="mt-1 text-gray-900">@Model.Cnpj</dd>
        </div>
    </dl>

    <form asp-action="Delete" class="mt-6 flex justify-between">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="inline-flex items-center gap-2 px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 transition">
            <i data-lucide="arrow-left" class="w-4 h-4"></i> Cancelar
        </a>
        <button type="submit" class="inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition">
            <i data-lucide="trash" class="w-4 h-4"></i> Excluir
        </button>
    </form>
</div>

@section Scripts {
    <script>lucide.createIcons();</script>
}