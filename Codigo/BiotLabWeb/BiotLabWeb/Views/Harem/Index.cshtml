@model IEnumerable<BiotLabWeb.Models.HaremViewModel>

<h1>Lista de Harens</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Número Macho</th>
            <th>Número Fêmea</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var harem in Model)
        {
                <tr>
                    <td>@harem.Id</td>
                    <td>@harem.NumeroMacho</td>
                    <td>@harem.NumeroFemea</td>
                    <td>@harem.Status</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@harem.Id">Detalhes</a> |
                        <a asp-action="Edit" asp-route-id="@harem.Id">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@harem.Id">Excluir</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Adicionar Novo Harem</a>
