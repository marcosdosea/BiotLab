@model BiotLabWeb.Models.HaremViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Novo Harem</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="NumeroMacho" class="control-label"></label>
        <input asp-for="NumeroMacho" class="form-control" />
        <span asp-validation-for="NumeroMacho" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumeroFemea" class="control-label"></label>
        <input asp-for="NumeroFemea" class="form-control" />
        <span asp-validation-for="NumeroFemea" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
